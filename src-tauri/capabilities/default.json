{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "fs:default",
    "cli:default",
    "core:default",
    "shell:allow-open",
    "clipboard-manager:allow-write-text",
    {
        "identifier": "fs:scope",
        "allow": [{ "path": "**" }]
    }
  ]
}
