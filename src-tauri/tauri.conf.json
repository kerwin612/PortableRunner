{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PortableRunner",
  "version": "0.1.3",
  "identifier": "io.github.kerwin612.portable-runner",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PortableRunner",
        "width": 600,
        "height": 400,
        "center": true,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": false,
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
        "args": [
          {
            "name": "tpath",
            "index": 1,
            "takesValue": true
          },
          {
            "name": "lpath",
            "index": 2,
            "takesValue": true
          },
          {
            "name": "hpath",
            "index": 3,
            "takesValue": true
          }
        ]
    }
  }
}
